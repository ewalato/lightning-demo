<aura:component description="BasketProduct">
    <aura:attribute name="product" type="Object" />

    <lightning:layout multipleRows="false">
        <lightning:layoutItem size="3" padding="around-small">
            <aura:unescapedHtml value="{!v.product.Product2.Image__c}" />
        </lightning:layoutItem>
        <lightning:layoutItem size="9" padding="around-small">
            <a href="javascript:void(0);" class="slds-text-link">{!v.product.Product2.Name}</a>
            <div style="font-size: 0.8125rem;">
                <span>{!v.product.description}</span>
                <ul class="slds-list_horizontal slds-has-dividers_left">
                    <li class="slds-item">
                        <div class="slds-text-title slds-text-color_default">Autor: {!v.product.Product2.Author__c}</div>
                    </li>
                    <li class="slds-item">
                        <div class="slds-text-title slds-text-color_default">Format: {!v.product.Product2.Format__c}</div>
                    </li>
                    <li class="slds-item">
                        <div class="slds-text-title slds-text-color_default">{!v.product.UnitPrice} z≈Ç</div>
                    </li>
                </ul>
            </div>
        </lightning:layoutItem>
    </lightning:layout>
</aura:component>